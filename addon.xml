<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<addon id="script.GVoice"
    name="GVoice Notification" 
    version="0.0.1" 
    provider-name="cyrus007">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
    </requires>
    <extension point="xbmc.service" library="default.py" start="startup">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <license>GPL 2.0</license>
        <summary lang="en">XBMC Gtalk Addon to provide notification service from GVoice.</summary>
        <description lang="en">This plugin receives notifications from GTalk which have been configured to be sent from GVoice.</description>
    </extension>
</addon>
